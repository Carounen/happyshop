@model IEnumerable<Faq>

@{
    ViewData["Title"] = "Index";
}
<style>
    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 60px; /* Height of the footer */
        background-color: #f5f5f5;
        text-align: center;
        line-height: 60px; /* Align text vertically in the middle */
    }

    .faq-container {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .faq-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        background-color: #f8f9fa; /* Light gray background color */
    }

        .faq-card h5 {
            margin-bottom: 10px;
        }

        .faq-card p {
            margin-bottom: 5px;
        }

    .btn-container {
        margin-top: 20px;
    }
</style>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">FAQ section</h2>
        </div>
        <div class="col-6 text-end btn-container">
            <a asp-controller="Faq" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp;Ask your question</a>
        </div>
    </div>
</div>

<div class="container faq-container">
    @foreach (var obj in Model)
    {
        <div class="faq-card">
            <h5>Question:@obj.Question</h5>
            <p>Answer: @obj.Answer</p>
            <p>Date Posted: @obj.Date.ToString("yyyy-MM-dd")</p>
        </div>
    }
</div>
