@model ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="card shadow border mt-4 p-3">
        <div class="card-header bg-secondary bg-gradient text-light py-4 text-center">
            <h3 class="text-white text-uppercase fs-4">@Model.Product.Name</h3>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-12 col-md-2 offset-lg-1 pb-1">
                        <a class="btn btn-primary btn-lg mb-3 text-uppercase" href="/">Back</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Url.Content(@Model.Product.image)" class="img-fluid rounded border" alt="Product Image">
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge bg-black">@Model.Product.Category.Name</span>
                        </div>
                        <div class="row ps-2">
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 pb-2">
                                Price:
                                <span class="text-success">
                                    @Model.Product.Price
                                </span>
                            </h6>
                        </div>

                        <div class="row text-center ps-2">
                        </div>
                        <div class="row pl-2 my-3 border-top">
                            <p class="text-secondary lh-sm">@Html.Raw(Model.Product.Description)</p>
                        </div>
                       
                       
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
