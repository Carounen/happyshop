@model IEnumerable<Review>

@{
    ViewData["Title"] = "Index";
}
<style>
    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 60px; /* Height of the footer */
        background-color: #f5f5f5;
        text-align: center;
        line-height: 60px; /* Align text vertically in the middle */
    }

    .review-card {
        display: flex;
        margin-bottom: 20px;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
    }

    .card-image {
        margin-right: 15px;
        max-width: 200px;
        max-height: 100px;
    }

    .card-details {
        flex-grow: 1;
    }
</style>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Reviews</h2>
        </div>
       
    </div>
</div>

<div class="container">
    @foreach (var obj in Model)
    {
        <div class="review-card">
            <div class="card-image">
                @if (!string.IsNullOrEmpty(obj.image))
                {
                    <img src="@Url.Content(obj.image)" alt="User Image" class="img-fluid" />
                }
            </div>
            <div class="card-details">
                <h5>@obj.Name</h5>
                <p>@obj.Rev</p>
                <p>Date Posted: @obj.Date.ToString("yyyy-MM-dd")</p>
            </div>
            <div class="btn-group" role="group" aria-label="Basic example">

                <a asp-controller="MyReview" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning">
                    <i class="bi bi-trash3"></i> Edit
                </a>
            </div>
            <div class="btn-group" role="group" aria-label="Basic example">

                <a asp-controller="MyReview" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                    <i class="bi bi-trash3"></i> Delete
                </a>
            </div>

        </div>

       
    }
</div>
