@model IEnumerable<Announcement>

@{
    ViewData["Title"] = "Index";
}

<style>
    .product-card {
        width: 18rem;
        margin: 10px;
    }

    .product-image {
        max-width: 100%;
        max-height: 150px;
        display: block;
        margin: auto;
    }
</style>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Announcement List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Announcement" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create New Announcement
                </a>
            </div>
        </div>
    

        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>

                <tr>
                    <th>Purpose</th>

                    <th>Annoucement</th>

                    <th>Image</th>
                    <th>Date</th>



                  
                    <th></th>
                </tr>
            </thead>


        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/announcement.js"></script>
}
