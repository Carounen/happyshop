@model IEnumerable<Review>


@{
    ViewData["Title"] = "Index";
}
<style>
    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 60px; /* Height of the footer */
        background-color: #f5f5f5;
        text-align: center;
        line-height: 60px; /* Align text vertically in the middle */
    }
</style>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Review List</h2>
        </div>
       
    </div>
</div>
<div class="container">
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Review</th>
                <th scope="col">Date Posted</th>
                <th scope="col">Action</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td style="  margin-right: 15px;
        max-width: 50px;
        max-height: 100px;">
                        @if (!string.IsNullOrEmpty(obj.image))
                        {
                            <img src="@Url.Content(obj.image)" alt="User Image" class="img-fluid" />
                        }
                    </td>
                    <td>@obj.Rev</td>
                    <td>@obj.Date.ToString("yyyy-MM-dd")</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                           
                            <a asp-controller="ReviewControllerAdmin" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
